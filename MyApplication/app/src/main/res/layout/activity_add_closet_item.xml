<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <!--tools:context=".LoginActivity">-->

    <!-- Login progress -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<ExpandableListView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:scrollbars="none"></ExpandableListView>-->
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/closet_item_type_prompt"
                />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/closet_item_type_array"
                android:prompt="@string/closet_item_type_prompt"
                android:spinnerMode="dialog"></Spinner>

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/closet_item_type_prompt"
                    />

                <Spinner
                    android:id="@+id/spinnerSubType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/closet_item_subType_array"
                    android:prompt="@string/closet_item_subType_prompt"
                    android:spinnerMode="dialog"></Spinner>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/closet_item_store_prompt"
                    />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/closet_item_store_array"
                    android:prompt="@string/closet_item_store_prompt"
                    android:spinnerMode="dialog"></Spinner>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/closet_item_color_prompt"
                    />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/closet_item_color_array"
                    android:prompt="@string/closet_item_color_prompt"
                    android:spinnerMode="dialog"></Spinner>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"/>


            <ImageView
                android:id="@+id/closet_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="@string/closet_item_add"
                android:padding="1dp"
                android:scaleType="center" />

            <Button
                style="?android:textAppearanceSmall"
                android:id="@+id/btnAddPicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/closet_item_picture"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSubmit"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/closet_item_add"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
